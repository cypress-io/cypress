{
  "name": "@packages/electron",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "node ./bin/cypress-electron --install",
    "build-prod": "yarn build",
    "clean": "rm -rf dist",
    "clean-deps": "rm -rf node_modules",
    "postinstall": "echo '@packages/electron needs: yarn build'",
    "start": "./bin/cypress-electron",
    "test-e2e": "exit 0",
    "test-e2e:ci": "exit 0",
    "test-integration": "exit 0",
    "test-integration:ci": "exit 0",
    "test-unit": "yarn test-unit:ci --watch --inspect",
    "test-unit:ci": "mocha --compilers coffee:@packages/coffee/register"
  },
  "dependencies": {
    "@cypress/icons": "0.7.0",
    "bluebird": "3.5.3",
    "debug": "4.1.1",
    "electron-packager": "14.1.1",
    "fs-extra": "8.1.0",
    "lodash": "4.17.15",
    "minimist": "1.2.0"
  },
  "devDependencies": {
    "@packages/coffee": "*",
    "electron": "7.1.7",
    "mocha": "3.5.3"
  },
  "files": [
    "dist",
    "lib"
  ],
  "bin": {
    "cypress-electron": "./bin/cypress-electron"
  }
}
