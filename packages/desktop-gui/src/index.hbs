<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Cypress</title>
  {{#each stylesheets}}
    <link rel="stylesheet" href="{{this}}" />
  {{/each}}
</head>
<body>
  <div id="app"></div>
  <div id="ui-blocker"></div>

  <script>
    if (!!window.Cypress) {
      window.env = 'test'
    } else {
      window.env = '{{env.NODE_ENV}}'
    }

    if (window.env === 'development') {
      // this allows React DevTools to work in an iframe
      // (if we're in Cypress running our app)
      __REACT_DEVTOOLS_GLOBAL_HOOK__ = parent.__REACT_DEVTOOLS_GLOBAL_HOOK__
    }
  </script>
  {{#each scripts}}
    <script src="{{this}}"></script>
  {{/each}}
  <script>
    // this allows us to control when the app starts from Cypress tests
    // but starts it immediately if run outside of Cypress
    if (!window.Cypress) {
      App.start()
    }
  </script>
</body>
</html>
