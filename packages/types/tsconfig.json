{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "lib": ["es2018", "ES2020.Promise"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "types": [],
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error"
  },
}