{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "test",
    "script"
  ],
  "compilerOptions": {
    "lib": ["ES2018", "ES2020.Promise"],
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error",
    "types": []
  },
}