{
  "name": "semantic-release-monorepo",
  "version": "0.0.0-development",
  "description": "Plugins for `semantic-release` allowing it to be used with a monorepo.",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier --write --single-quote --trailing-comma es5",
    "format:all": "yarn format \"./**/*.js\"",
    "test": "jest"
  },
  "license": "MIT",
  "peerDependencies": {
    "semantic-release": "13.4.1 - 15.x.x"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "execa": "^0.8.0",
    "p-limit": "^1.2.0",
    "pkg-up": "^2.0.0",
    "ramda": "^0.25.0",
    "read-pkg": "^3.0.0",
    "semantic-release-plugin-decorators": "^1.2.1"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "semantic-release": "^15.0.0",
    "semantic-release-github-pr": "^5.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format"
    ]
  }
}
