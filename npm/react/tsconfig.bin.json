{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./bin",
    "rootDir": "./init",
    "declarationDir": "./bin",
    "module": "CommonJS",
    "target": "ES2018",
    "types": [
      "node"
    ],
    "lib": [
      "ES2018"
    ],
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": [
    "**/*.test.ts",
    "./init/test/*"
  ],
  "include": [
    "./init/**/*.ts"
  ]
}
