{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "cypress-schematics-e2e-spec",
  "title": "Cypress Generate Spec Options Schema",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path where the spec will be created.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project to create the spec in.",
      "alias": "p",
      "$default": {
        "$source": "projectName"
      }
    },
    "name": {
      "type": "string",
      "description": "The name of the spec.",
      "alias": "n",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What should the spec be named?"
    },
    "testingType": {
      "enum": [
        "e2e",
        "component"
      ],
      "alias": "t",
      "description": "The type of spec to generate - e2e or component. e2e is default.",
      "default": "e2e",
      "x-prompt": "What type of spec do you want to generate?"
    }
  },
  "required": [
    "name",
    "testingType"
  ]
}